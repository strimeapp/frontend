				{{ 'front.faq.link.what_guarantees_the_security_of_my_data'|trans }}
			</a>
			<div class="faq-answer" id="faq-data-privacy">
				<p>
					{{ 'front.faq.text.strime_deploys_important_means'|trans }}
				</p>
				<p>
					{{ 'front.faq.text.for_safety_of_transactions'|trans }}
				</p>
			</div>
		</div>

		<div>
			{{ 'front.faq.text.cant_find_answer'|trans({'%link_start%': '<a href="' ~ url('contact') ~ '" title="' ~ 'front.faq.aalt.contact_us'|trans ~ '">', '%link_end%': '</a>'})|raw }}
		</div>

