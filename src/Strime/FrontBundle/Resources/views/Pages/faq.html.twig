{% trans_default_domain 'front_faq' %}
{% extends '::front_base.html.twig' %}

{% block link_canonical %}
    <link rel="canonical" href="{{ url('home') }}faq" />
{% endblock %}

{% block meta_tags %}
    <meta name="description" content="{{ 'front.faq.meta.description'|trans }}">
    <meta name="author" content="Strime">
    <meta name="keywords" content="{{ 'front.faq.meta.description'|trans }}">
{% endblock %}

{% block title %}Strime | {{ 'front.faq.meta.title'|trans }}{% endblock %}

{% block body %}
	{{ parent() }}

	{% include 'front_header.html.twig' %}

	<div class="wrapper">
		<h1>{{ 'front.faq.title.frequent_asked_questions'|trans }}</h1>

		<div class="excerpt">
			{{ 'front.faq.excerpt.find_below_answers_to'|trans }}
		</div>

		<h2>{{ 'front.faq.title.first_steps'|trans }}</h2>

		<div>
			<a href="#" class="faq-question" title="{{ 'front.faq.link.change_language'|trans }}" data-target="#faq-change-language">
				{{ 'front.faq.link.change_language'|trans }}
			</a>
			<div class="faq-answer" id="faq-change-language">
				<p>
					{{ 'front.faq.text.yes_language_selector'|trans }}
				</p>
				<p>
					{{ 'front.faq.text.languages_available'|trans }}
				</p>
			</div>

			<a href="#" class="faq-question" title="{{ 'front.faq.link.how_can_i_have_a_profile_picture'|trans }}" data-target="#faq-change-avatar">
				{{ 'front.faq.link.how_can_i_have_a_profile_picture'|trans }}
			</a>
			<div class="faq-answer" id="faq-change-avatar">
				<p>
					{{ 'front.faq.text.profile_picture_automatically_collected'|trans|raw }}
				</p>
				<p>
					{{ 'front.faq.text.can_also_change_picture_in_my_account'|trans }}
				</p>
			</div>

			<a href="#" class="faq-question" title="{{ 'front.faq.link.available_tablet_phone'|trans }}" data-target="#faq-available-mobile">
				{{ 'front.faq.link.available_tablet_phone'|trans }}
			</a>
			<div class="faq-answer" id="faq-available-mobile">
				<p>
					{{ 'front.faq.text.screen_size_not_big_enough'|trans }}
				</p>
			</div>

			<a href="#" class="faq-question" title="Puis-je importer des fichiers son ou images ?" data-target="#faq-import-image">
				{{ 'front.faq.link.can_i_import_images'|trans }}
			</a>
			<div class="faq-answer" id="faq-import-image">
				<p>
					{{ 'front.faq.text.features_not_available_yet'|trans }}
				</p>
			</div>
		</div>

		<h2>{{ 'front.faq.title.videos'|trans }}</h2>

		<div>
			<a href="#" class="faq-question" title="{{ 'front.faq.link.which_format_can_i_import'|trans }}" data-target="#faq-video-format">
				{{ 'front.faq.link.which_format_can_i_import'|trans }}
			</a>
			<div class="faq-answer" id="faq-video-format">
				<p>
					{{ 'front.faq.text.strime_wants_to_be_the_simplest'|trans }}
				</p>
			</div>

			<a href="#" class="faq-question" title="{{ 'front.faq.link.max_resolution'|trans }}" data-target="#faq-video-maxsize">
				{{ 'front.faq.link.max_resolution'|trans }}
			</a>
			<div class="faq-answer" id="faq-video-maxsize">
				<p>
					{{ 'front.faq.text.you_can_use_any_resolution'|trans }}
				</p>
			</div>

			<a href="#" class="faq-question" title="{{ 'front.faq.link.why_conversion_phase'|trans }}" data-target="#faq-why-conversion">
				{{ 'front.faq.link.why_conversion_phase'|trans }}
			</a>
			<div class="faq-answer" id="faq-why-conversion">
				<p>
					{{ 'front.faq.text.ensure_compatibility'|trans }}
